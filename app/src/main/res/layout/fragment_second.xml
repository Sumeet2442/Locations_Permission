<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vect"
    tools:context=".SecondFragment">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="376dp"
        android:layout_height="254dp"
        android:alpha="0.9"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:src="@drawable/aorun"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="402dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#8FDF8861"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:layout_marginTop="104dp"
                android:layout_marginEnd="165dp"
                android:fontFamily="@font/kumbh_sans"
                android:text="@string/location_latnlong"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtDimLoc1"
                android:layout_width="680dp"
                android:layout_height="178dp"
                android:layout_marginStart="284dp"
                android:layout_marginEnd="41dp"
                android:layout_marginBottom="76dp"
                android:alpha="0.4"
                android:fontFamily="@font/trade_winds"
                android:rotation="-45"
                android:text="@string/location_latnlong"
                android:textColor="#C97C6262"
                android:textSize="96sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.413"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtDimLoc2"
                android:layout_width="680dp"
                android:layout_height="178dp"
                android:layout_marginStart="284dp"
                android:layout_marginEnd="41dp"
                android:layout_marginBottom="4dp"
                android:alpha="0.4"
                android:fontFamily="@font/trade_winds"
                android:rotation="45"
                android:text="@string/location_latnlong"
                android:textColor="#C97C6262"
                android:textSize="96sp"
                android:translationY="180dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.681"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtAlt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/kumbh_sans"
                android:text="@string/alt_speed"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/txtLoc"
                app:layout_constraintHorizontal_bias="0.473"
                app:layout_constraintStart_toStartOf="@+id/txtLoc"
                app:layout_constraintTop_toBottomOf="@+id/txtLoc" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>